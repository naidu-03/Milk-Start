<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="5sp"
android:elevation="8dp"
    android:background="@color/black"
app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#B1DFDB"
        android:orientation="vertical">

        <!--text view for our course name-->
        <TextView
            android:id="@+id/Name_farmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"

            android:text="Course Name"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--text view for our course tracks-->
            <TextView
                android:id="@+id/cost_milk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="3dp"
                android:text="Course Tracks"
                android:textColor="@color/black" />


            <!--text view for our course duration-->
            <TextView
                android:id="@+id/avail_milk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="3dp"
                android:text="Duration"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <!--text view for our course description-->

            <EditText
                android:id="@+id/quantity_milk"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:gravity="center"
                android:hint="@string/milkq"
                android:inputType="numberDecimal"

                android:padding="3dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buy"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/buy" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
